/*------------------------------------*
	$ INDEX
*------------------------------------*/
@import 'partials/base.styl'


/*------------------------------------*
	$ MAIN SLIDER
*------------------------------------*/
.main-slider
	height 100%
	.slide
		top 0
		left 0
		right 0
		bottom 0
		position absolute
		background-size cover
		background-position center center
		&:not(:first-child)
			display none

.anim
	transition opacity 1.5s


/*------------------------------------*
	$ MAIN COVER
*------------------------------------*/
.main-cover
	top 0
	left 0
	right 0
	bottom 0
	position absolute
	display flex
	flex-direction column
	// background rgba(#FFC107, .1)
	// background rgba(#FF9800, .15)
	// background rgba(#F44336, .15)
	// background rgba(#FF9800, .15)

	// background rgba(black, .3)
	.main-text
		flex 1
		margin 1rem
		color white
		display flex
		font-family: 'Source Sans Pro';
		// letter-spacing 2px
		// letter-spacing 1.5px
		flex-direction column
		justify-content center
		text-align center
		h1
			// font-weight 400
			font-weight 800
			// font-size 2.5rem
			font-size 3rem
			margin-bottom .5rem
		h2
			font-weight 400
			font-size 1.25rem

.logos-background
	background white

.logos-container
	width: 100%;
	max-width max-width
	margin auto
	display flex
	flex-direction column
	// padding .5rem
	align-items center
	justify-content space-between
	.socials
		display flex
		margin .5rem
		i
			margin .5rem
			// width 40px
			// height 40px
			width 30px
			height 30px
			border-radius 50%
			display flex
			align-items center
			justify-content center
			color rgba(black, .7)
			// font-size 1.15rem
			font-size .9rem
			border solid 2px rgba(black, .7)
			// color white
			// background rgba(black, .7)
	.logos
		margin .5rem
		// margin-top 1.5rem
		// margin-bottom 1rem

		max-width: 1000px;
		display: flex;
		justify-content: flex-end;
		align-items center
		.logo
			// display block
			// background rgba(white, .75)
			// color #3B3E40
			// max-width 250px
			// max-width 150px
			max-width 125px
			display block
			color white
			text-transform uppercase
			font-weight 700
			// padding 0 1rem
			// margin 1rem 0
			// padding 1rem 2rem
			// font-size 1.25rem
		p
			// color white
			color: #666
			font-family: 'Roboto';
			font-size: .9rem;


@media (min-width: 700px)
	.logos-container
		flex-direction: row;


@media (min-width: desktop)
	.main-cover
		.main-text
			h1
				// font-size 2.75rem
				font-size 3.5rem
			h2
				// font-size 1.75rem
				// font-size 1.725rem
				font-size 1.35rem