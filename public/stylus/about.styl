*------------------------------------*/
@import 'partials/base.styl'

.about
	margin auto
	max-width max-width
	padding-bottom 5rem
.about-section
	margin-top 5rem
	.title
		font-weight 300
		font-size 2.25rem
		margin 1.5rem 1rem
		letter-spacing 2px
	.text
		margin 1rem
		color #666666
		// font-size .9rem
		font-family 'Roboto'
	.img
		margin auto
		padding 1rem
		max-width 500px
	&.center
		text-align center
	&.right
		text-align right
	&.three
		flex 1

@media (min-width: tablet)
	.three-container
		display flex
